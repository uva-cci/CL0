{
	"compilerOptions": {
		"target": "ES2024",
		"useDefineForClassFields": true,
		"lib": ["ES2024", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"strict": true,
		"baseUrl": ".",

		"paths": {
			"@/*": ["src/*"],
			"@components/*": ["src/components/*"]
		},
		"types": ["vite/client"]
	},
	"include": ["src"]
}
